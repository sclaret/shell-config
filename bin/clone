#! /usr/bin/env bash

function check {
  echo -n "Checking for cloned repo $1: "
  if [[ -d $1 ]]; then
    echo "found"
    return 0
  else
    echo "not found"
    return 1
  fi
}

if (($# == 1)); then
  if check $1; then
    echo "Error: repo already cloned."
    exit 1
  else
    clone github $1 || clone gitlab $1
    exit $?
  fi
elif (($# == 2)); then
  echo -n "Cloning from $1.. "
  git clone git@$1.com:sclaret/$2.git
  exit $?
else
  echo "Error: arguments not recognised"
  exit 1
fi





